import random
answers = ['Бесспорно	Мне кажется - да',	'Пока неясно', 'Попробуй снова', 'Даже не думай', 'Предрешено',	'Вероятнее всего',	'Спроси позже',	'Мой ответ - нет', 'Никаких сомнений',	'Хорошие перспективы',	'Лучше не рассказывать',	'По моим данным - нет', 'Определённо да',	'Знаки говорят - да',	'Сейчас нельзя предсказать',	'Перспективы не очень хорошие', 'Можешь быть уверен в этом',	'Да',	'Сконцентрируйся и спроси опять',	'Весьма сомнительно']
def is_answer():
    print(f'Что же ты хчешь узнать, {name}')
    print('И помни что вопрос надо задавать с умом, ведь ответ будет гдето между ДА и НЕТ')
    qwestion = input()
    print(f'Что ж, я отвечу на твой вопрос, {qwestion}')
    print(random.choice(answers))
    print('- - - - - - - - - - -')
    print("Ну как то так")

print('Приветствую тебя, я магический шар, и я знаю ответ на любой твой вопрос.')
print('Как тебя зовут, о ищущий ответов?')
name = input()

is_answer()

while True:
    print("Хочешь ли ты узнать что-то ещё?")
    new = input('y = ДА, n = НЕТ   -   ')
    if new in "YynN":
        if new.lower() == 'y':
            is_answer()
        else:
              print('Возвращайся, если возникнут вопросы!')
              break
    else:
        print('Внимательней будь, писать можно только "y" или "n"')
        continue
print('Пу-Пу-Пу')
